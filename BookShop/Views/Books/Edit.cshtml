@model BookShop.Models.Book
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="row form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Title"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Title" class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Author"></label>
                </div>
                <div class="col-sm-4">
                    @*<input asp-for="AuthorId" class="form-control" />*@
                    <select asp-for="AuthorId" class="form-control"
                            asp-items="@(new SelectList(ViewBag.ListOfAuthors,"AuthorId","Name"))"></select>

                </div>
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit"  asp-route-BookId="@Model.BookId" value="Save" class="btn btn-sm btn-primary" />
            <input type="submit" asp-action="Index" value="Back to List" class="btn btn-sm btn-success" />
        </div>
    </div>
</form>