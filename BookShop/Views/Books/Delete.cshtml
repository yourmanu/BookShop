@model BookShop.Models.Book
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<form asp-action="Delete">
    <div class="row form-border">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Title"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Title" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Author"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Author.Name" disabled class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" asp-route-id=@Model.BookId value="Delete" class="btn btn-sm btn-danger" />
            @*<a asp-action="Delete" asp-route-id=@Model.BookId class="btn btn-sm btn-success">Delete</a>*@
            <input type="submit" asp-action="Index" value="Back to List" class="btn btn-sm btn-success" />
        </div>
    </div>
</form>
